<Application x:Class="VaultCrypt.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:VaultCrypt"
             xmlns:vm="clr-namespace:VaultCrypt.ViewModels"
             xmlns:views="clr-namespace:VaultCrypt.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!--Putting it on Grid because UserControl has no Background property-->
        <Style TargetType="Grid">
            <Setter Property="Background" Value="#161E2E"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E6EAF0"/>
            <Setter Property="Margin" Value="5,0,5,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="BlackTextStyle">
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#88BDF2"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="PasswordChar" Value="#"/>
            <Setter Property="Margin" Value="5,0,5,0"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5,0,5,0"/>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Style="{StaticResource BlackTextStyle}" Text="{Binding}"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        
        <DataTemplate DataType="{x:Type vm:MainViewViewModel}">
            <views:MainView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:CreateVaultViewModel}">
            <views:CreateVault/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:OpenVaultViewModel}">
            <views:OpenVault/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:PasswordInputViewModel}">
            <views:PasswordInput/>
        </DataTemplate>
        
        
        
        
        
        
        
        
        
        
        
        
        
        
    </Application.Resources>
</Application>
