<UserControl x:Class="VaultCrypt.Views.OpenVault"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VaultCrypt.Views"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Content=" Go back " HorizontalAlignment="Left" Command="{Binding GoBackCommand}"/>
        <TextBlock Grid.Column="1" Grid.Row="0" Text="Search" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        <TextBlock Grid.Column="2" Grid.Row="0" d:Text="VaultName.vlt" Text="{Binding VaultName}" HorizontalAlignment="Right"/>

        <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding FilteredText, UpdateSourceTrigger=PropertyChanged}"/>

        <DataGrid Grid.Row="2" Grid.ColumnSpan="3" d:ItemsSource="{d:SampleData ItemCount=10}" ItemsSource="{Binding EncryptedFilesCollectionView}" SelectedItem="{Binding SelectedFile, Mode=OneWayToSource}" AutoGenerateColumns="False" MaxHeight="800" CanUserResizeColumns="False" CanUserResizeRows="False" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="File" Binding="{Binding Value.FileName}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Size" Binding="{Binding Value.FileSize}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Algorithm" Binding="{Binding Value.EncryptionAlgorithm}" IsReadOnly="True"/>
            </DataGrid.Columns>

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Foreground="Black" FontWeight="Bold"/>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.ColumnHeaderStyle>

        </DataGrid>

        

        <StackPanel Grid.Row="3" Grid.ColumnSpan="3" Orientation="Horizontal">
            <Button Content="Add new file" Command="{Binding AddNewFileCommand}"/>
            <Button Content="Decrypt file" Command="{Binding DecryptFileCommand}"/>
            <Button Content="Delete file from vault" Command="{Binding DeleteFileCommand}"/>
            <Button Content="Trim unused space" Command="{Binding TrimCommand}"/>
        </StackPanel>
        
        
        

    </Grid>
</UserControl>
